{
  "compilerOptions": {
    "target": "es2022", // Or "esnext" for the latest features
    "module": "esnext", // This is crucial for ES Modules
    "moduleResolution": "bundler", // Or "node", but "bundler" is often good for modern setups
    "esModuleInterop": true, // Recommended for better import compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Where your compiled JS will go (optional, but good practice)
    "rootDir": "./" // Where your source TS files are
  },
  "include": [
    "**/*.ts" // Include all .ts files in your project
  ],
  "exclude": [
    "node_modules"
  ]
}